{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "auth", "Port": 80 }],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": ["POST", "GET"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/restaurant/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "restaurant", "Port": 80 }],
      "UpstreamPathTemplate": "/restaurant/{everything}",
      "UpstreamHttpMethod": ["POST", "GET"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      }
    }
    // Add more routes for other services
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}
